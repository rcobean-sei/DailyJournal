#!/usr/bin/env python3
"""
DailyJournal - Daily work summary generator
Executable wrapper for easy command-line usage
"""

import sys
from pathlib import Path

# Add scripts directory to path
scripts_dir = Path(__file__).parent.parent / "scripts"
sys.path.insert(0, str(scripts_dir))

# Import and run main
from generate_daily_summary import main

if __name__ == "__main__":
    main()
